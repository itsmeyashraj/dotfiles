#!/bin/bash

function send_notification() {
	volume=$(amixer get Master | awk '$0~/%/{print $4}' | tr -d '[]')
	dunstify -a "changevolume" -u low -r "9993" -h int:value:"$volume" -i "volume-$1" "Volume: ${volume}%" -t 2000
}

case $1 in
up)
	# Set the volume on (if it was muted)
	amixer set Master unmute
	amixer -c 0 -- sset Master 2db+
	send_notification $1
	;;
down)
	amixer -c 0 -- sset Master 2db-
	send_notification $1
	;;
mute)
	amixer set Master toggle
	if $(amixer get Master | sed 5q | grep -q '\[off\]'); then
		dunstify -i volume-mute -a "changevolume" -t 2000 -r 9993 -u low "Muted"
	else
		send_notification up
	fi
	;;
esac
