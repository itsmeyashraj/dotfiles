[global]
monitor = 0

#Mouse actions
follow = mouse
mouse_left_click = do_action
mouse_middle_click = close_all
mouse_right_click = close_current

#Shortcuts
close = ctrl+space
close_all = ctrl+shift+space
history = ctrl+grave
context = ctrl+shift+grave

width = 250
height = 650

offset = 10x35
indicate_hidden = yes

shrink = no

separator_height = 2
separator_color = auto

padding = 14
horizontal_padding = 12

frame_width = 2

font = JetBrainsMono Nerd Font Medium 10

sort = no
idle_threshold = 120

line_height = 4
markup = full
format = "%s\n %b"
alignment = left
vertical_alignment = top
show_age_threshold = 60
word_wrap = yes
ignore_newline = no
stack_duplicates = false
hide_duplicate_count = yes
show_indicators = no
icon_position = left
max_icon_size = 80
icon_path =/usr/share/icons/Adwaita/:/usr/share/icons/Adwaita/16x16/status/
sticky_history = yes
history_length = 20
#browser = x-www-browser -new-tab
browser = /usr/bin/xdg-open
always_run_script = true
title = Dunst
class = Dunst
progress_bar = true
progress_bar_height = 10
corner_radius = 10

#Urgency & sounds

[NetworkManager]
appname = NetworkManager
urgency = critical

#[NetworkManagerDisconnect]
#appname = NetworkManager
#summary = "Disconnected"
#urgency = critical
#script = ~/.config/dunst/sounds/disconnect.sh

#[NetworkManagerConnect]
#appname = NetworkManager
#summary = "Connection Established"
#urgency = critical
#script = ~/.config/dunst/sounds/connect.sh

[urgency_low]
timeout = 5
background = "#323232"
foreground = "#dfbf8e"
frame_color = "#e78a4e"
highlight = "#e78a4e"
#script = ~/.config/dunst/sounds/low.sh

[urgency_normal]
timeout = 5
background = "#323232"
foreground = "#dfbf8e"
frame_color = "#d65d0e"
highlight = "#e78a4e"
#script = ~/.config/dunst/sounds/normal.sh

[urgency_critical]
timeout = 10
background = "#323232"
foreground = "#dfbf8e"
frame_color = "#cc241d"
highlight = "#e78a4e"
#script = ~/.config/dunst/sounds/critical.sh

#[play_sound]
#summary = "*"
#script = ~/.config/dunst/sounds/notify-gruv

[volume_sound]
appname = changevolume
icon_position = off
