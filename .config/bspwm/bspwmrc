#!/bin/bash
# only source other files here
#------------------------------
THEME="gruvbox"

# Configuration
$HOME/.config/bspwm/themes/bspwm-$THEME

# Application rules
$HOME/.config/bspwm/bspwm-rules

# Monitors
$HOME/.config/bspwm/bspwm-monitors

# Autostart
export GTK2_RC_FILES=$HOME/.config/bspwm/gtk-2.0/gtkrc
export QT_QPA_PLATFORMTHEME=gtk2
#source $HOME/.config/bspwm/bspwm-external
$HOME/.config/bspwm/autostart/$THEME.sh
$HOME/.config/bspwm/bspwm-autostart.sh
#wait
