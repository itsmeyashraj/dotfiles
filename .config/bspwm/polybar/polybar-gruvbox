;; Mainbar BSPWM

[bar/mainbar-bspwm]
monitor = VGA-0
monitor-strict = false
bottom = false
fixed-center = true
width = 100%
height = 22

line-size = 2

background = ${colors.background}
foreground = ${colors.foreground}

radius = 0.0

border-size = 0
;border-left-size = 25
;border-right-size = 25
border-top-size = 4
border-bottom-size = 4
border-color = ${colors.background}

padding-left = 1
padding-right = 1

module-margin-left = 1
module-margin-right = 1

;https://github.com/jaagr/polybar/wiki/Fonts
; Overall font
font-0 = "JetBrainsMono Nerd Font:style=bold:size=12;2"
; Workspace Icon font
font-1 = "FontAwesome:size=12;2"
; Extra Font for modules
font-2 = "JetBrainsMono Nerd Font:style=bold:size=12;2"
; Extra Font for modules 2
font-3 = "JetBrainsMono Nerd Font:size=16;4"
; Japanese Fonts
;font-4 = "Sarasa Gothic J:style=bold:size=12;4"
font-4 = "Source Han Sans JP:style=bold:size=12;2"

modules-left = bspwm xwindow
modules-center = spotify spotify-prev spotify-play-pause spotify-next 
modules-right = weather memory2 cpu2 date 

;separator = |

;dim-value = 1.0

tray-detached = false
tray-offset-x = 0
tray-offset-y = 0
tray-padding = 2
tray-maxsize = 20
tray-scale = 1.0
tray-position = right
tray-background = ${colors.background}

#Make the bar appear below windows
wm-restack = bspwm
override-redirect = false

dpi = 0
; Enable support for inter-process messaging
; See the Messaging wiki page for more details.
enable-ipc = true
