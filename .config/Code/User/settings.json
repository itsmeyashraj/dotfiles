{
  "[css]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[html]": { "editor.defaultFormatter": "vscode.html-language-features" },
  "[javascript]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[jsonc]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "editor.fontLigatures": true,
  "editor.fontFamily": "JetBrainsMono Nerd Font",
  "editor.fontWeight": "bold",
  "terminal.integrated.fontFamily": "JetBrainsMono Nerd Font",
  "terminal.integrated.fontWeight": "bold",
  "editor.formatOnSave": true,
  "editor.bracketPairColorization.enabled": true,
  "editor.letterSpacing": 1.05,
  "editor.lineHeight": 20,
  "editor.minimap.maxColumn": 100,
  "editor.minimap.renderCharacters": false,
  "editor.minimap.side": "left",
  "editor.minimap.size": "fill",
  "editor.multiCursorModifier": "ctrlCmd",
  "editor.scrollbar.horizontal": "hidden",
  "editor.scrollbar.vertical": "hidden",
  "editor.suggestSelection": "first",
  "editor.tabSize": 2,
  "files.defaultLanguage": "html",
  "prettier.singleQuote": true,
  "problems.showCurrentInStatus": true,
  "telemetry.telemetryLevel": "off",
  "terminal.integrated.rightClickBehavior": "paste",
  "editor.cursorStyle": "line",
  "editor.cursorBlinking": "solid",
  "terminal.integrated.tabs.enabled": false,
  "editor.minimap.enabled": false,
  "workbench.colorTheme": "Gruvbox Dark Medium",
  "editor.wordWrap": "on",
  "terminal.integrated.gpuAcceleration": "canvas",
  "vim.statusBarColorControl": false,
  "vim.useCtrlKeys": false,
  "breadcrumbs.enabled": false,
  "explorer.openEditors.visible": 0,
  "editor.scrollBeyondLastLine": false,
  "window.title": "${folderName}/${activeEditorShort}",
  "explorer.confirmDragAndDrop": false,
  "workbench.sideBar.location": "right",
  "window.menuBarVisibility": "toggle",
  "editor.smoothScrolling": true,
  "editor.selectionHighlight": false,
  "scm.diffDecorations": "none",
  "editor.occurrencesHighlight": false,
  "editor.overviewRulerBorder": false,
  "editor.renderLineHighlight": "none",
  "editor.rulers": [],
  "editor.codeLens": false,
  "editor.folding": false,
  "editor.foldingHighlight": false,
  "editor.guides.indentation": true,
  "editor.guides.highlightActiveIndentation": false,
  "security.workspace.trust.enabled": false,
  "workbench.activityBar.visible": false,
  // comment: tab settings by pure vscode's settings
  // "workbench.editor.labelFormat": "short",
  // "workbench.editor.showTabs": false,
  // "workbench.editor.tabSizing": "shrink",
  "editor.cursorSmoothCaretAnimation": true,
  "customizeUI.stylesheet": {
    // "_comment": "This settings hides top right editor actions buttons",
    ".editor-actions": "display: none !important;",
    ":root": "--tab-height: 26px; --font-size-tab-title: 10px;",
    // ".editor-actions": "height: var(--tab-height) !important; line-height: var(--tab-height) !important;",
    ".tabs-container .tab": "height: var(--tab-height) !important; line-height: var(--tab-height) !important;",
    ".tabs-container .monaco-icon-label": "height: var(--tab-height) !important; line-height: var(--tab-height) !important; font-size: var(--font-size-tab-title); !important",
    ".tabs-container .monaco-icon-label:before": "height: var(--tab-height) !important; line-height: var(--tab-height) !important;",
    ".tabs-container .tab-actions": "display: none !important",
    ".tabs-container .monaco-icon-description-container": "display: none;",
    ".tabs-container": "height: var(--tab-height) !important;"
    //new settings
  }
}
